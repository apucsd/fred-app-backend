model Playlist {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    description String
    coverImage String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    userId String @db.ObjectId
    status PlaylistStatus @default(ACTIVE)
    price Int @default(0) 
    views Int @default(0)
    user User @relation("Playlist", fields: [userId], references: [id])
    music Music[] @relation("Playlist")
    playlistPurchase PlaylistPurchase[] @relation("PlaylistPurchase")
    

    @@map("playlist")
}
enum PlaylistStatus {
    ACTIVE
    INACTIVE
}