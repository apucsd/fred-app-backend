model InfoContent {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    content String
    type InfoContentType @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("info_contents")
}

enum InfoContentType {
    PRIVACY_POLICY
    TERMS_AND_CONDITIONS
}
